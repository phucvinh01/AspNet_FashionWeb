@model MyWebApp.Identity.AppUser
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

<div class="container p-3">
    <div class="row">
        <h2 class="font-monospace text-decoration-underline col-11">My Profile</h2>
        <a class="btn btn-close col-1" href="/home/index"></a>
    </div>

    <div class="row border p-4">
        <div class="col-6 border shadow">
            <img src="~/Img/OIP.jfif" class="w-50 figure-img" />
        </div>
        <div class="col-6 ">
            <form method="post" class="form-control p-2 align-items-center" action="/account/EditProfile">
                <div class="row">
                    <div class="col-6">
                        <input type="hidden" name="UserName" value="@Model.UserName" />
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(row => row.Address, new { @class = "form-control", placeholder = "Address", value = "Address" })
                            @Html.LabelFor(row => row.Address, "Addresse")
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(row => row.City, new { @class = "form-control", placeholder = "City", value = "City" })
                            @Html.LabelFor(row => row.City, "City")
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(row => row.BirthDay, new { @class = "form-control", placeholder = "BirthDay", value = "BirthDay" })
                            @Html.LabelFor(row => row.BirthDay, "BirthDay")
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(row => row.PhoneNumber, new { @class = "form-control", placeholder = "BirthDay", value = "BirthDay" })
                            @Html.LabelFor(row => row.PhoneNumber, "BirthDay")
                        </div>

                    </div>
                </div>

                <button class="form-control mt-2 btn btn-secondary font-monospace" type="submit">Edit</button>
            </form>

        </div>
</div>
    </div>

