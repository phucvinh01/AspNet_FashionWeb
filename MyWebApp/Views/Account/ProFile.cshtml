
@{
    ViewBag.Title = "proFile";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<hr />

<div class="container p-3">
    <div class="row">
        <h2 class="font-monospace text-decoration-underline col-11">My Profile</h2>
        <a class="btn btn-close col-1" href="/home/index"></a>
    </div>
    
    <div class="row border p-4">
        <div class="col-6 border shadow">
            <img src="~/Img/OIP.jfif" class="w-50 figure-img" />
        </div>
        <div class="col-6 ">
            <div class="container">
                <p class="font-monospace p-2 border-bottom">UserName: @Model.UserName</p>

                <p class="font-monospace p-2 border-bottom">Email: @Model.Email</p>
                <p class="font-monospace p-2 border-bottom">Address: @Model.Address</p>
                <p class="font-monospace p-2 border-bottom">City: @Model.City</p>
                @if (@Model.BirthDay == null)
                {
                    <p class="font-monospace p-2 border-bottom">BirthDay: Null</p>
                }
                else
                {
                    <p class="font-monospace p-2 border-bottom">BirthDay:  @Model.BirthDay</p>
                }
                <p class="font-monospace p-2 border-bottom">PhoneNumber: @Model.PhoneNumber</p>

            </div>
           
        </div>
        <a class="btn btn-secondary" href="/account/edit/?name=@Model.UserName">Edit</a>
    </div>
</div>

