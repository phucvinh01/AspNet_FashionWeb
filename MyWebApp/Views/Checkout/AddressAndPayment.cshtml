@model MyWebApp.Models.Order


@{
    ViewBag.Title = "AddressAndPayment";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
            type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>

<style>
    *{
        font-family:monospace;
    }
</style>
<div class="container pt-4">
    @using (Html.BeginForm())
    {
        <div class="row">
            <h2>Address And Payment</h2>
            <div class="col-6">
                <fieldset>
                    <legend>Shipping Information</legend>
                    @*@Html.EditorForModel()*@
                    <div class="form-floating mb-3 mt-3">
                        <input class="form-control font-monospace" type="text" @*value="@User.Identity.Name"*@ placeholder="Full Name"/>
                        <label >Full Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control font-monospace" type="text" @*value="@ViewBag.user.PhoneNumber"*@  placeholder="Phone"/>
                        <label>Phone</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control font-monospace" type="text" @*value="@ViewBag.user.Address"*@  placeholder="Address"/>
                        <label>Address</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control font-monospace" type="text" @*value="@ViewBag.user.City"*@ placeholder="City"/>
                        <label>City</label>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Payment Method</legend>
                    <div class="form-control">
                        <input class="form-check-input font-monospace" type="radio" name="COD" />
                        <label for="COD">Thanh toán khi nhận hàng (COD)</label>
                    </div>
                    <div class="form-floating mt-3 d-flex">

                        <input type="text" class="form-control me-2" name="discountCode" placeholder="Discount code">
                        <label for="discountCode">Discount code</label>
                        <button class="btn btn-secondary">Apply</button>


                    </div>
                </fieldset>
                <div class="row pt-4 ">
                    <div class="col-8"><a class="page-link" href="/shoppingcart/index"> Back to Cart</a></div>
                    <div class="col-4 text-end"><input type="submit" value="Submit Order" class="btn btn-success" /></div>
                </div>


            </div>
        </div>
    }
</div>

