@using PagedList.Mvc
@model  PagedList.IPagedList<MyWebApp.Models.Product>

@{
    ViewBag.Title = "Tops";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<style>
    .wh {
        width: 200px;
        height: 240px;
    }

    .text-overlow {
        text-overflow: ellipsis;
        overflow: hidden;
    }

    .heightMaxImg {
        height: 150px;
    }

    .fs-13px {
        font-size: 13px;
    }

    .fs-12px {
        font-size: 12px;
    }

    .element {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-hover:hover {
        box-shadow: 0px 0px 3px 3px;
    }
</style>

@section all
{
    <div class="container">
        <div class="container">
            <div class="row justify-content-between">

                @foreach (var item in Model)
                {

                    <div class="col-2 m-1">
                        <a href="/product/detailstring/@item.ProductID" class="card nav-link text-center wh card-hover">
                            <img src="~/Img/@item.ImgUrl" class="card-img-top heightMaxImg" alt="cap1">
                            <div class="card-body">
                                <p class="element fs-13px">@item.ProductName</p>
                                <p class="text-muted fs-12px"><span>@item.Price</span>.000 VND</p>
                            </div>
                        </a>
                    </div>


                }

            </div>
        </div>
    </div>
    <td colspan="9" class="pagination text-center">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="/category/category/@Page[i]">@i</a>
                </li>

            }
        </ul>
    </td>

}