<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/StyleSheet1.css" rel="stylesheet" />
    <title>Admin Page</title>

    <style>
       
    </style>
</head>
<body>
    <div class="p-1 bg-white sticky-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-4">
                    <a href="/home"><img src="~/Img/Minimalist.png" alt="this is logo" style="width:140px" /></a>
                </div>
                <div class="col-4">
                    <form class="d-flex m-1" role="search" method="post" action="/category/search">
                        <input class="form-control bg-light" type="search" name="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-group font-monospace" type="submit">Search</button>
                    </form>
                </div>
                <div class="col-4 navbar navbar-expand justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item fw-bold">
                            <a class="nav-link font-monospace" href="#"><i class="fa fa-commenting p-1 fs-4" aria-hidden="true"></i></a>
                        </li>
                        <li class="nav-item fw-bold">
                            <a class="nav-link font-monospace" href="#"><i class="fa fa-bell-o p-1 fs-4" aria-hidden="true"></i></a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item fw-bold">
                                <a class="nav-link font-monospace  p-2 fs-5  position-relative" href="/account/profile/?name=@User.Identity.Name">Hello @User.Identity.Name</a>
                                <a class="nav-link font-monospace position-absolute" href="/account/logout"><i class="fa fa-power-off" aria-hidden="true"></i> Log Out</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item fw-bold">
                                <a class="nav-link font-monospace" aria-current="page" href="/account/login"><i class="fa fa-user-o p-2 fs-3" aria-hidden="true"></i></a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
            <div class="container-sm">
                <ul class="nav justify-content-center font-monospace fs-5">
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold font-monospace" aria-current="page" href="/admin/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold font-monospace" href="/admin/index">All</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold font-monospace" href="/admin/Tops">Tops</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold font-monospace" href="/admin/Outerwear">Outerwear</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold font-monospace" href="/admin/Bottoms">Bottoms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold font-monospace" href="/admin/Accessories">Accessories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold font-monospace" href="#">Sale</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container-fluid">
        <div class="d-flex">
            <div class="main font-monospace fs-5">
                <div class="d-flex flex-column flex-shrink-0 p-3 bg-white border-right" style="width: 280px;">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                        <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
                        <span class="fs-4">Sidebar</span>
                    </a>
                    <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="/admin/index" class="nav-link link-dark" aria-current="page">
                                <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#home" /></svg>
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link link-dark">
                                <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#speedometer2" /></svg>
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link link-dark">
                                <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#table" /></svg>
                                Orders
                            </a>
                        </li>
                        <li>
                            <a href="/admin/api" class="nav-link link-dark">
                                <svg class="bi pe-none me-2" width="16" height="16"><use  /></svg>
                                Products API
                            </a>
                        </li>
                        <li>
                            <a href="/admin/getcustommers" class="nav-link link-dark">
                                <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#people-circle" /></svg>
                                Customers
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li>
                            <a href="#" class="nav-link link-dark">
                                <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#people-circle" /></svg>
                                Sign Out
                            </a>
                        </li>
                    </ul>


                </div>
            </div>
            @RenderBody()
            @RenderSection("Insert", required: false)
            @RenderSection("insertnewproduct", required: false)
            @RenderSection("edit", required: false)
        </div>

    </div>
    
    
    
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script>
        /* global bootstrap: false */
        (() => {
            'use strict'
            const tooltipTriggerList = Array.from(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.forEach(tooltipTriggerEl => {
                new bootstrap.Tooltip(tooltipTriggerEl)
            })
        })()

    </script>
    <div class="sticky-bottom bg-white">
    <div class="container-fluid ">
        <div class="row">
            <div class="col-4 navbar navbar-expand justify-content-start">
                <ul class="navbar-nav">
                    <li class="nav-item fw-bold">
                        <a class="nav-link font-monospace" href="/home/aboutme">About ME</a>
                    </li>
                </ul>
            </div>
            <div class="col-4 navbar navbar-expand justify-content-center">
                <label class="font-monospace">2001200636-NguyenPhucVinh-2022</label>
            </div>
            <div class="col-4 navbar navbar-expand justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item fw-bold">
                        <a class="nav-link font-monospace" aria-current="page" href="#">Facebook</a>
                    </li>
                    <li class="nav-item fw-bold">
                        <a class="nav-link font-monospace" href="#">Instagram</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</div>

</body>
</html>